@model IEnumerable<Fugu.Models.FuguModels.Recipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ui vertical segment">
        <div class="ui container">
            <div  class="ui segment pilled main-segment">
                <div class="ui info message">
                    <i class="close icon"></i>
                    <div class="header">
                        Changes in Service
                    </div>
                    <ul class="list">
                        <li>Changes in Service
We just updated our privacy policy here to better service our customers. We recommend reviewing the changes.</li>
                    </ul>
                </div>

                <h2 class="ui header">
                    <i class="leanpub icon"></i>
                    <div class="content">
                        Recetas
                        <div class="sub header">Listado de Recetas</div>
                    </div>
                </h2>

                <a class="ui button primary" asp-action="Create">Crear Nuevo</a>

                <div class="ui clearing divider">
                </div>
                <table class="ui celled table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CookbookId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Inserted)
                            </th>
                            <th>
                                @Html.DisplayNameFor(mode => mode.LastUpdated)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.CookbookId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Inserted)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastUpdated)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.RecipeId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.RecipeId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.RecipeId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="5">
                                <div class="ui right floated pagination menu">
                                    <a class="icon item">
                                        <i class="left chevron icon"></i>
                                    </a>
                                    <a class="item">1</a>
                                    <a class="item">2</a>
                                    <a class="item">3</a>
                                    <a class="item">4</a>
                                    <a class="icon item">
                                        <i class="right chevron icon"></i>
                                    </a>
                                </div>
                            </th>
                        </tr>
                    </tfoot>
                </table>


                <p></p>
            </div>
        </div>
</div>

